    "scripts": {
        "test": "cat logo.txt && lerna run test --parallel",
        "test:watch": "lerna run test --parallel -- --collect-coverage=false --watch",
        "release": "cat logo.txt && lerna version --conventional-commits --yes",
        "bootstrap": "cat logo.txt && lerna bootstrap",
        "build": "cat logo.txt && lerna run build",
        "watch": "cat logo.txt && lerna run watch --parallel",
        "storybook": "cat logo.txt && lerna run storybook --parallel",
        "lint": "cat logo.txt && lerna run lint --parallel",
        "publish:npm": "cat logo.txt && lerna publish from-git --yes"
    },
    "dependencies": {
        "lodash-es": "^4.17.21",
        "prop-types": "^15.7.2",
