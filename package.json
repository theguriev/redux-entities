        "react-use": "^17.1.1",
        "redux": "^4.1.0"
    },
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/node": "^16.10.3",
        "@types/react": "^17.0.27",
        "@types/react-dom": "^17.0.9",
        "lerna": "^4.0.0",
        "typescript": "^4.4.3"
    }
